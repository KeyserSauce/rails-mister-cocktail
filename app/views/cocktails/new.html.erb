<h1>cocktails#new</h1>

<%= simple_form_for(@cocktail) do |f| %>

  <% if @cocktail.errors.any? %>
   <div id="error_explanation">
     <ul>
     <% @cocktail.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
   </div>
  <% end %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>



